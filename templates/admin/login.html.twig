{% extends 'base.html.twig' %}

{% block body %}

	<div class="container mt-4">

	<h1>Connexion</h1>
	{% if error %}
		<div class="alert alert-danger">
			{{ error.messagekey | trans(error.messagedata, 'security') }}
		</div>
	{% endif %}
	<form action="{{ path('admin_login') }}" method="post">
		<div class="form-group">
			<input type="text" required name="_username" placeholder="Nom d'utilisateur ..." class="form-control" value="{{ last_username }}">
		</div>
		<div class="form-group">
			<input type="password" required name="_password" placeholder="Mot de passe ..." class="form-control">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success">Connexion</button>
		</div>
	</form>
	</div>
{% endblock %}