{% extends 'base.html.twig' %}

{% block title %}admin-categories-{{ parent() }}{% endblock %}

{% block body %}
<div class="container">
	<h1>Gerer les categories</h1>
	<div class="row">
		<div class="text-left col-md-6">
			<a href="{{ path('admin') }}" class="btn btn-primary">Retour à l'accueil</a>
		</div>

		<div class="text-right col-md-6">
			<a href="{{ path('category_create') }}" class="btn btn-primary">Ajouter une categorie</a>
		</div>
	</div>
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message}}
		</div>
	{% endfor %}
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in category %}

			<tr>
				<td>{{ category.title }}</td>
				<td class="row">
					<div class="col-md-6">
						<a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-secondary">Modifier</a>
					</div>
					<div class="col-md-6">
						<form method="post" action="{{ path('category_delete', {id: category.id}) }}" onsubmit="return confirm('Etes vous sûr de Supprimer ?')">
							<input type="hidden" name="_method" value="DELETE">
							<input type="hidden" name="_token" value="{{ csrf_token('delete', category.id)}}">
							<button class="btn btn-danger">Supprimer</button>
						</form>
					</div>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="row">
		<div class="text-left col-md-6">
			<a href="{{ path('admin') }}" class="btn btn-primary">Retour à l'accueil</a>
		</div>

		<div class="text-right col-md-6">
			<a href="{{ path('category_create') }}" class="btn btn-primary">Ajouter une categorie</a>
		</div>
	</div>
</div>
{% endblock %}
