{% extends 'admin/base.html.twig' %}

{% block title %}administration des commentaires-{{ parent() }}{% endblock %}

{% block body %}
<div class="container mb-4">
	<h1>Gerer les commentaires</h1>
	
	<div class="row">
		<div class="text-right col-md-6">
			<a href="{{ path('admin') }}" class="btn btn-primary"><i class="fa fa-angle-double-left"></i>Retour à l'accueil</a>
		</div>

		<div class="text-left col-md-6">
			<a href="{{ path('category_index') }}" class="btn btn-primary">Ajouter une categorie</a>
		</div>
	</div>

	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message}}
		</div>
	{% endfor %}
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Auteurs</th>
				<th>Commentaires</th>
				<th>Articles</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.author.username }}</td>
					<td>{{ comment.content }}</td>
					<td>{{ comment.article.title }}</td>
					<td>
						<a href="{{ path('admin_comment_delete', {id: comment.id}) }}" onsubmit="return confirm('Etes vous sûr de Supprimer ?')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="row">
		<div class="text-right col-md-6">
			<a href="{{ path('admin') }}" class="btn btn-primary"><i class="fa fa-angle-double-left"></i>Retour à l'accueil</a>
		</div>

		<div class="text-left col-md-6">
			<a href="{{ path('category_index') }}" class="btn btn-primary">Ajouter une categorie</a>
		</div>
	</div>
</div>
{% endblock %}
