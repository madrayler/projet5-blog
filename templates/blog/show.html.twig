{% extends 'base.html.twig' %}

{% block body %}
	
	<article>
		<h2>{{ articles.title }}</h2>
		<div class="metadata">Ecrit le {{ articles.createdAt | date('d/m/y')}} à {{ articles.createdAt | date('H:i') }} dans la catégorie {{ articles.category.title }} </div>
		<div class="content">
			{% if articles.imagename %}
				<img src="{{ vich_uploader_asset(articles, 'imageFile') | imagine_filter('medium') }}" alt="card-img-top" width="100%" height="auto">
			{% endif %}
			{{ articles.content | raw }}
		</div>	
	</article>
	<section id="commentaires">
		<h1>{{ articles.comments | length }} Commentaires :</h1>
		{% for comment in articles.comments %}
		<div class="comment">
			<div class="row">
				<div class="col-3">
					{{ comment.author}} (<small>{{ comment.createdAt | date('d/m/y à H:i')}}</small>)
				</div>
				<div class="col">
					{{ comment.content | raw}}
				</div>
			</div>
		</div>
		{% endfor %}

		{% if app.user %}
		{{ form_start(commentForm) }}
		{{ form_row(commentForm.author, {'attr': {'placeholder': "Votre nom"}}) }}
		{{ form_row(commentForm.content, {'attr': {'placeholder': "Votre commentaire"}}) }}

		<button type="submit" class="btn btn-success">Commenter</button>
		{{ form_end(commentForm) }}

		{% else %}
		<h2>Connectez-vous pour commenter !</h2>
		<a href="{{ path('connect_login')}}" class="btn btn-primary">Connexion</a>
		{% endif %}

	</section>
	
{% endblock %}