{% extends 'blog/base.html.twig' %}

{% block title %}blog-general-{{ parent() }}{% endblock %}

{% block body %}

<div class="row blog">
	{% for article in articlesBlog %}
		<div class="col-md-3 mb-4">
		
			<div>
			{% if article.imagename %}
				<a href="{{ path('blog_perso_show', {'id': article.id}) }}"><img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="card-img-top"></a>
			{% endif %}
			</div>
			<a href="{{ path('blog_perso_show', {'id': article.id}) }}">{{ article.title }}</a>  
		</div>
	{% endfor %}
</div>

{% endblock %}
