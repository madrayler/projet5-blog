<script>function myFunction() {
  document.getElementById("demo").innerHTML = "Hello World!"
}</script>
{% for articles in listArticles %}
	<div class="articles">
		<div class="row">
		<div class="col-md-8">
		<a href="{{ path('blog_show',{'id': articles.id})}}" onmouseover="myFunction()">
			<div class="metadata">
				<span class="date">{{ articles.createdAt|date('d/m') }}</span> - <span class="categoryArticle">{{ articles.category.title|upper }}</span>
			</div>
			<div class="titreArticles">
				<p>{{ articles.title }}</p>
			</div>
		</a>
		</div>
		<div class="col-md-4">
			
			<p id="demo"></p>
		</div>
		</div>
	</div>
{% endfor %}