{% extends 'connect/base.html.twig' %}

{% block body %}
<div class="container">
	<div class="login_register">
		
		<h1>Connectez-vous</h1>
		{% if error %}
			<div class="alert alert-danger">
				{{ error.messagekey | trans(error.messagedata, 'security') }}
			</div>
		{% endif %}
		<form action="{{ path('connect_login') }}" method="post">
			<div class="form-group">
				<input type="text" required name="_username" placeholder="Nom d'utilisateur ..." class="form-control" value="{{ last_username }}">
			</div>
			<div class="form-group">
				<input type="password" required name="_password" placeholder="Mot de passe ..." class="form-control">
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="form-group">
				<button type="submit" class="btn btn-primary">Connexion</button>
			</div>
		</form>
		<h2>Pas encore membre ? <a href="{{ path('connect_registration') }}">Inscrivez-vous !</a></h2>
	</div>
	</div>
{% endblock %}